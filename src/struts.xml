<struts>
      <package name="login_register" namespace="/" extends="struts-default">
       <action name="login" class="com.user.action.Useraction" method="alogin">
               <result name="student_success">/student_home.jsp</result>
               <result name="teacher_success">/professor_home.jsp</result>
               <result name="wrong_id">/login.jsp</result>
               <result name="wrong_password">/login.jsp</result>
       </action>
       <action name="register" class="com.user.action.Useraction" method="register">
               <result name="success">/ID_information.jsp</result>
               <result name="failure">/register.jsp</result>
       </action>
        <action name="release" class="com.user.action.Releaseaction" method="teacherfabu">
               <result name="success">/professor_book.jsp</result>
               <result name="failure">/professor_book.jsp</result>
       </action>
       <action name="searchprofessor" class="com.user.action.bookingaction" method="searchprofessor">
               <result>/student_book.jsp</result>
       </action>
     
       <action name="queryOneProfessorAllTimes" class="com.user.action.bookingaction" method="queryOneProfessorAllTimes">
               <result>/student_book.jsp</result>
       </action>
       <action name="appoint" class="com.user.action.bookingaction" method="studentappalication">
               <result>/student_book.jsp</result>
               <result name="failure">/student_book.jsp</result>
       </action>
